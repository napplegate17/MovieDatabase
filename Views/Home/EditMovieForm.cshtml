@{
    ViewBag.Title = "Edit a Movie";
}

@model Movie
<!--Nicholas Applegate, Section 1 Group 3-->
<!--Set up form to edit and send information-->
<form asp-action="EditMovieForm" method="post">
    <div>
        <label asp-for="Category">Category</label>
        <select asp-for="Category">
            <option value="">Select One</option>
            <option value="Action/Adventure">Action/Adventure</option>
            <option value="Comedy">Comedy</option>
            <option value="Drama">Drama</option>
            <option value="Family">Family</option>
            <option value="Horror/Suspense">Horror/Suspense</option>
            <option value="Miscellaneous">Miscellaneous</option>
            <option value="Television">Television</option>
            <option value="VHS">VHS</option>
        </select>
    </div>

    <div>
        <label asp-for="Title">Title</label>
        <input asp-for="Title" />
    </div>

    <div>
        <label asp-for="Year">Year</label>
        <input asp-for="Year" />
    </div>

    <div>
        <label asp-for="Director">Director</label>
        <input asp-for="Director" />
    </div>

    <div>
        <label asp-for="Director">Rating</label>
        <select asp-for="Rating">
            <option value="">Select One</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="NR">NR</option>
            <option value="UR">UR</option>
            <option value="TV-Y7">TV-Y7</option>
            <option value="TV-PG">TV-PG</option>
            <option value="TV-14">TV-14</option>
            <option value="TV-MA">TV-MA</option>
        </select>
    </div>

    <div>
        <label asp-for="Rating">Edited</label>
        <select asp-for="Edited">
            <option value="">Select One</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <div>
        <label asp-for="Edited">Lent To:</label>
        <input asp-for="LentTo" />
    </div>

    <div>
        <label asp-for="LentTo">Notes</label>
        <input asp-for="Notes" />
    </div>

    <div asp-validation-summary="All"></div>

    <button type="submit">Submit</button>

</form>